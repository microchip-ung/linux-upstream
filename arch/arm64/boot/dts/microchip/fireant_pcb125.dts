/dts-v1/;
#include "fireant_pcb_common.dtsi"

/ {
	model = "FireAnt PCB125 Reference Board";
	compatible = "mscc,fireant-pcb125", "mscc,fireant";

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x00000000 0x10000000>;
	};
};

&spi0 {
	status = "okay";
	spi-flash@0 {
		compatible = "mx66l1g45g", "jedec,spi-nor";
		spi-max-frequency = <8000000>; /* input clock */
		reg = <0>; /* CS0 */
	};
        spi-flash@1 {
		compatible = "spi-nand";
		pinctrl-0 = <&cs1_pins>;
		pinctrl-names = "default";
		spi-max-frequency = <8000000>;
		reg = <1>; /* CS1 */
	};
};

&sgpio0 {
	status = "okay";
	mscc,sgpio-ports = <0x00FFFFFF>;
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&gpio {
	emmc_pins: emmc-pins {
		// NB: No "GPIO_35", "GPIO_36", "GPIO_37"
		// (N/A: CARD_nDETECT, CARD_WP, CARD_LED)
		pins = "GPIO_34", "GPIO_38", "GPIO_39",
			"GPIO_40", "GPIO_41", "GPIO_42",
			"GPIO_43", "GPIO_44", "GPIO_45",
			"GPIO_46", "GPIO_47";
		drive-strength = <3>;
		function = "emmc";
	};
};

&sdhci0 {
	status = "okay";
	bus-width = <8>;
	non-removable;
	pinctrl-0 = <&emmc_pins>;
	max-frequency = <8000000>;
	mscc,clock-delay = <10>;
};
